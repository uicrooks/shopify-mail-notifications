{% extends '@layouts::base.twig' %}

{#
 # Email subject
 # ---
 # Order {{ name }} has been delivered
 #}

{# title - start #}
{% block title %}
  {% verbatim %}
    {% capture title %}Your order has been delivered{% endcapture %}
  {% endverbatim %}

  {{ parent() }}
{% endblock %}
{# title - end #}

{# preview - start #}
{% block preview %}
  {% verbatim %}
    {% capture preview %}{% endcapture %}
  {% endverbatim %}

  {{ parent() }}
{% endblock %}
{# preview - end #}

{# content - start #}
{% block content %}
  {% include '@components::local/intro-text.twig' with {
    headline: '{{ title }}',
    text: 'Havenâ€™t received your order? <a href="mailto:{{ shop.email }}">Let us know</a>.'
  } %}

  {% verbatim %}
    <mj-raw>
      {% if order_status_url %}
    </mj-raw>
  {% endverbatim %}

    {% include '@components::local/actions.twig' with {
      primary: {
        url: '{{ order_status_url }}',
        text: 'View your order'
      }
    } %}

  {% verbatim %}
    <mj-raw>
      {% else %}
    </mj-raw>
  {% endverbatim %}

    {% embed '@components::local/actions.twig' with {
      primary: {
        url: '{{ shop.url }}',
        text: 'Visit our store'
      }
    } %}
      {% block secondary_outer %}{% endblock %}
    {% endembed%}

  {% verbatim %}
    <mj-raw>
      {% endif %}
    </mj-raw>
  {% endverbatim %}

  {% include '@components::local/tracking.twig' %}

  {% include '@components::local/headline.twig' with {
    headline: 'Items in delivery',
    padding: '20px 0 5px'
  } %}

  <mj-wrapper padding-bottom="20px">
    <mj-raw>
      {{ development
        ? '{% for line in line_items %}{% for i in (1..2) %}'
        : '{% for line in fulfillment.fulfillment_line_items %}'
      }}
    </mj-raw>

      {% embed '@components::local/product.twig' %}
        {% block right %}{% endblock %}
      {% endembed %}

    <mj-raw>
      {{ development
        ? '{% endfor %}{% endfor %}'
        : '{% endfor %}'
      }}
    </mj-raw>
  </mj-wrapper>
{% endblock %}
{# content - end #}